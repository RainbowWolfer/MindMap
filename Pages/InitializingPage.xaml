<Page x:Class="MindMap.Pages.InitializingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MindMap.Pages"
      mc:Ignorable="d" 
	  d:Background="DimGray"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InitializingPage"
	  Loaded="Page_Loaded">

	<Grid>
		<StackPanel VerticalAlignment="Center">
			<ProgressBar Height="4" Width="250" IsIndeterminate="True" Margin="5"/>
			<TextBlock Text="Initializing" TextAlignment="Center" Margin="5" FontSize="24"/>
		</StackPanel>
	</Grid>
</Page>
