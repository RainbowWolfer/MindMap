<Page x:Class="MindMap.Pages.MindMapPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	  xmlns:local="clr-namespace:MindMap.Pages"
	  mc:Ignorable="d" 
	  d:DesignHeight="450" d:DesignWidth="800"
	  d:Background="White"
	  Title="MindMapPage">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="170"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<TextBlock Text="This is Tool Menu" Margin="10" FontSize="18"/>
			<Button x:Name="AddRectableButton" Content="Add Rectangle" Click="AddRectableButton_Click"/>
			<TextBlock x:Name="CurrentPositionText"/>
			<TextBlock x:Name="CurrentMousePositionText"/>
		</StackPanel>
		<Border Grid.Column="1" BorderBrush="Gray" BorderThickness="2,0,0,0">
			<Canvas x:Name="MainCanvas">
				<!--<Rectangle Fill="Black" Width="100" Height="100"/>-->
			</Canvas>
		</Border>
	</Grid>
</Page>
