<Window x:Class="MindMap.SubWindows.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MindMap.SubWindows"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="About"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        MinHeight="200"
        MinWidth="300">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<TextBlock Text="Map Mind" FontSize="36" HorizontalAlignment="Center"/>
		<TextBlock Text="By RainbowWolfer" FontSize="18" HorizontalAlignment="Center" Grid.Row="1"/>
		<TextBlock x:Name="VersionText" FontSize="14" Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
	</Grid>
</Window>
