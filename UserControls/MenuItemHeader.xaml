<UserControl x:Class="MindMap.UserControls.MenuItemHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MindMap.UserControls"
             mc:Ignorable="d" 
			 d:Background="Gray"
             d:DesignHeight="20" d:DesignWidth="150">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<TextBlock x:Name="HeaderText" Text="New File"/>
		<TextBlock x:Name="FooterText" Text="Ctrl + N" Grid.Column="1" HorizontalAlignment="Right" TextAlignment="Right" Margin="30,0,-30,0" FontSize="11" VerticalAlignment="Bottom"/>
	</Grid>
</UserControl>
