<UserControl x:Class="MindMap.UserControls.RenamableTextDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MindMap.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150"
			 d:Background="Gray">
	<Grid>
		<TextBlock x:Name="Block" d:Text="Hello World" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" PreviewMouseUp="Block_PreviewMouseUp"/>
		<TextBox x:Name="Box" d:Text="Hello World" FontSize="14" HorizontalContentAlignment="Center" VerticalAlignment="Center" LostFocus="Box_LostFocus" Visibility="Collapsed" AcceptsReturn="False" AcceptsTab="False" PreviewKeyDown="Box_PreviewKeyDown"/>
	</Grid>
</UserControl>
